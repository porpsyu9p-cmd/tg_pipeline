#!/bin/bash
cd "$(dirname "$0")/backend"

echo "üöÄ Backend..."

# –°–æ–∑–¥–∞–µ–º venv –µ—Å–ª–∏ –Ω–µ—Ç
if [ ! -d "venv" ]; then
    echo "üì¶ Creating venv..."
    python3 -m venv venv
fi

# –í—Å–µ–≥–¥–∞ –æ–±–Ω–æ–≤–ª—è–µ–º –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ (–∏—Å–ø–æ–ª—å–∑—É–µ–º –ø—Ä—è–º–æ–π –ø—É—Ç—å)
echo "üì¶ Installing dependencies..."
./venv/bin/pip install -q -r requirements.txt

echo "‚ú® http://localhost:8000"
./venv/bin/uvicorn app.web:app --reload --port 8000

